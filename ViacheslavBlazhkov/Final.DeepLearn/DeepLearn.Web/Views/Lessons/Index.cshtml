@model IEnumerable<DeepLearn.Contracts.LessonsStructs.Lesson>

@{
    ViewData["Title"] = "Index";
}

<h1>Lessons</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <a href="@Url.Action("Index", "TheoryBlocks", new { lessonId = item.Id })" class="btn btn-primary">Go to Lesson</a>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-secondary">Edit</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-secondary">Details</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<style>
    .card {
        box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.2);
        border-radius: 10px;
    }
</style>